#include <stdio.h>

int main()
{
const double CAD = 60.54;
const double EUR = 87.36;
const double GBP = 103.19;
const double CLP = 0.093;
const double CNY = 11.7;
const double ZAR = 4.94;
const double TRY = 5.49;
const double JPY = 0.67;
int code;
double cad;
double eur;
double gbp;
double clp;
double cny;
double zar;
double try;
double jpy;
    printf("*****************************************************************");
    printf("\n-----------------WELCOME TO CURRENCY CONVERTOR-------------------");
    printf("\n*****************************************************************");
    printf("\n1)CAD");
    printf("\n2)EUR");
    printf("\n3)GBP");
    printf("\n4)CLP");
    printf("\n5)CNY");
    printf("\n6)ZAR");
    printf("\n7)TRY");
    printf("\n8)JPY");
    printf("\n************************");
    printf("\nEnter country code, one to eight that you wish to convert into INR: ");
    scanf("%d", &code);
    printf("\n************************");
     switch (code)
   {  case 1:
          printf("\nEnter amount of CAD: ");
          scanf("%lf", &cad);
          printf("%.2f CAD = ", cad);
          cad = cad * CAD;
          printf("%.2f INR\n",cad);

      break;
      case 2:
          printf("\nEnter amount of EUR: ");
          scanf("%lf", &eur);
          printf("%.2f EUR = ", eur);
          eur = eur * EUR;
          printf("%.2f INR\n", eur);

          break;
      case 3:
          printf("\nEnter amount of GBP: ");
          scanf("%lf", &gbp);
          printf("%.2f GBP = ", gbp);
          gbp = gbp * GBP;
          printf("%.2f INR\n", gbp);

      break;
      case 4:
          printf("\nEnter amount of CLP: ");
          scanf("%lf", &clp);
          printf("%.2f CLP = ", clp);
          clp = clp * CLP;
          printf("%.2f INR\n", clp);

        break;
        case 5:
          printf("\nEnter amount of CNY: ");
          scanf("%lf", &cny);
          printf("%.2f CNY = ", cny);
          cny = cny * CNY;
          printf("%.2f INR\n", cny);

      break;
      case 6:
          printf("\nEnter amount of ZAR: ");
          scanf("%lf", &zar);
          printf("%.2f ZAR = ", zar);
          zar = zar * ZAR;
          printf("%.2f INR\n", zar);

      break;
      case 7:
          printf("\nEnter amount of TRY: ");
          scanf("%lf", &try);
          printf("%.2f TRY = ", try);
          try = try * TRY;
          printf("%.2f INR\n", try);

      break;
      case 8:
        printf("\nEnter amount of JPY: ");
          scanf("%lf", &jpy);
          printf("%.2f JPY = ", jpy);
          jpy = jpy * JPY;
          printf("%.2f INR\n", jpy);

      break;
      default:
          printf("\n%d is an invalid country code!", code);
      break;
    }
    printf("\n**********************************************************************");
    printf("\n-----------------------------THANK YOU--------------------------------");
    printf("\n**********************************************************************");
        return 0;
}

